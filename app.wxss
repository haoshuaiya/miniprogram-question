page{
    box-sizing: border-box;
    height: 100%;
    background-color: #f8f8f8;
    font-size: 32rpx;
    line-height: 1.6;
}
.list-head{
    padding: 20rpx;
}
.list-container{
    margin: 10rpx 0;
    display: flex;
    flex-direction: column;
}
.list-item-container{
    padding: 20rpx;
    background: #ffffff;
    display: flex;
}
.list-item-container + .list-item-container{
    margin-top: 10rpx;
}
.list-index{
    width: 100rpx;
    border-right: 1rpx solid #d9d9d9;
    text-align: center;
}
.list-title{
    flex: 1;
    padding-left: 20rpx;
}
.list-hover{
    background: #dedede;
}
.mt-20{
    margin-top: 20rpx;
}